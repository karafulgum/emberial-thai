<p class="title">{{ model.name }}</p>
  <table class="table">
    <div class="table__row">
      <button class="category-btn category-btn--danger" {{action "destroyRecord" model}}>Delete</button>
      {{#link-to "admin.category.new-item" model.id class="category-btn" }}Add New Menu Item{{/link-to}}
    </div>
    <thead class="table__row table__row--header">
      <span>Name</span>
    </thead>
    {{#each model.menuItems as |item|}}
    <tbody class="table__row">
        <span>{{ item.name }}</span>
        <tr class="table__row table__row--group">
          <span>{{#link-to "admin.item.edit" item.id}}Edit{{/link-to}}</span>
          <span><a href="#" {{action "destroyRecord" item}}>Delete</a></span>
        </tr>
      </tbody>
    {{/each}}
  </table>
